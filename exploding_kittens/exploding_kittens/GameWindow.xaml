<Window x:Class="exploding_kittens.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Взрывные Котята - Игра"
        WindowState="Maximized"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="#0c2461">

    <Grid>
        <Rectangle Fill="#0c2461"/>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Панель информации -->
            <Border Grid.Row="0" 
                    Background="#FFFFFFE6"
                    CornerRadius="15"
                    Padding="15"
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Текущий ход -->
                    <Border Grid.Column="0"
                            CornerRadius="10"
                            Padding="12,8"
                            HorizontalAlignment="Left"
                            Background="#06D6A0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🎮" FontSize="18" Margin="0,0,8,0"/>
                            <StackPanel>
                                <TextBlock Text="ТЕКУЩИЙ ХОД" 
                                           FontSize="11" 
                                           Foreground="White"
                                           FontWeight="Bold"/>
                                <TextBlock x:Name="CurrentPlayerLabel"
                                           Text="Ожидание..."
                                           FontSize="14"
                                           Foreground="White"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Таймер -->
                    <Border Grid.Column="1"
                            HorizontalAlignment="Center"
                            CornerRadius="10"
                            Padding="12,8"
                            Background="#FF6A11">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⏱" FontSize="18" Margin="0,0,8,0"/>
                            <StackPanel>
                                <TextBlock Text="ОСТАЛОСЬ ВРЕМЕНИ" 
                                           FontSize="11" 
                                           Foreground="White"
                                           FontWeight="Bold"/>
                                <TextBlock x:Name="TimerLabel"
                                           Text="00:30"
                                           FontSize="20"
                                           Foreground="White"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Статистика -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Border CornerRadius="10"
                                Padding="12,8"
                                Margin="0,0,8,0"
                                Background="#4a148c">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" FontSize="18" Margin="0,0,8,0"/>
                                <StackPanel>
                                    <TextBlock Text="ИГРОКОВ" 
                                               FontSize="11" 
                                               Foreground="White"
                                               FontWeight="Bold"/>
                                    <TextBlock x:Name="PlayersCountLabel"
                                               Text="?"
                                               FontSize="14"
                                               Foreground="White"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border CornerRadius="10"
                                Padding="12,8"
                                Background="#118AB2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🃏" FontSize="18" Margin="0,0,8,0"/>
                                <StackPanel>
                                    <TextBlock Text="КОЛОДА" 
                                               FontSize="11" 
                                               Foreground="White"
                                               FontWeight="Bold"/>
                                    <TextBlock x:Name="DeckCountLabel"
                                               Text="?"
                                               FontSize="14"
                                               Foreground="White"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Основное игровое поле -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левый игрок -->
                <Border x:Name="LeftPlayerPanel"
                        Grid.Column="0"
                        Background="#FFFFFFE6"
                        CornerRadius="15"
                        Margin="10"
                        Padding="15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="220"
                        Visibility="Collapsed">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Border Width="40" Height="40" 
                                    CornerRadius="20"
                                    Background="#06D6A0"
                                    Margin="0,0,10,0">
                                <TextBlock Text="😼" 
                                           FontSize="16"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="LeftPlayerName"
                                           Text="Игрок3"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                                <TextBlock x:Name="LeftPlayerCardCount"
                                           Text="0 карт"
                                           FontSize="11"
                                           Foreground="#666"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <WrapPanel x:Name="LeftPlayerCardsPanel"
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Центральная часть -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Верхний игрок -->
                    <Border x:Name="TopPlayerPanel"
                            Grid.Row="0"
                            Background="#FFFFFFE6"
                            CornerRadius="15"
                            Margin="0,0,0,15"
                            Padding="15"
                            HorizontalAlignment="Center"
                            Width="280"
                            Visibility="Collapsed">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Border Width="40" Height="40" 
                                        CornerRadius="20"
                                        Background="#FF6A11"
                                        Margin="0,0,10,0">
                                    <TextBlock Text="👑" 
                                               FontSize="16"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock x:Name="TopPlayerName"
                                               Text="Игрок2"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="TopPlayerCardCount"
                                               Text="0 карт"
                                               FontSize="11"
                                               Foreground="#666"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>

                            <WrapPanel x:Name="TopPlayerCardsPanel"
                                       HorizontalAlignment="Center" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Центр с колодой и сбросом -->
                    <Grid Grid.Row="1" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Колода -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="🃏 КОЛОДА" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>

                            <Border Width="150" Height="210"
                                    CornerRadius="15"
                                    BorderBrush="#FFD166"
                                    BorderThickness="4"
                                    Cursor="Hand"
                                    x:Name="DeckBorder"
                                    MouseLeftButtonDown="DeckBorder_MouseLeftButtonDown"
                                    Background="#FFD166">
                                <Grid>
                                    <!-- Изображение колоды -->
                                    <Image Source="photo/Shirt.png" 
                                           Stretch="Fill"/>
                                    <TextBlock x:Name="DeckCountText"
                                               Text="?"
                                               FontSize="36"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="0,0,0,20"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Лог сообщений -->
                        <Border Grid.Column="1"
                                Background="#FFFFFFE6"
                                CornerRadius="15"
                                Padding="15"
                                Margin="20,0"
                                Width="300"
                                MaxHeight="400">
                            <StackPanel>
                                <TextBlock Text="📜 СООБЩЕНИЯ" 
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#4a148c"
                                           Margin="0,0,0,10"/>
                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                                              MaxHeight="320">
                                    <TextBlock x:Name="MessageLogText"
                                               TextWrapping="Wrap"
                                               FontSize="12"/>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>

                        <!-- Сброс -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Text="🗑️ СБРОС" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>

                            <Border Width="150" Height="210"
                                    CornerRadius="15"
                                    BorderThickness="4"
                                    x:Name="DiscardBorder"
                                    BorderBrush="#EF476F">
                                <!-- Изображение сброса -->
                                <Image x:Name="DiscardImage"
                                       Source="photo/Shirt.png" 
                                       Stretch="Fill"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Рука игрока -->
                    <Border Grid.Row="2"
                            Background="#FFFFFFE6"
                            CornerRadius="15"
                            Margin="0,20,0,0"
                            Padding="15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                                <TextBlock Text="🎴 " FontSize="18"/>
                                <TextBlock Text="ВАШИ КАРТЫ" 
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#4a148c"/>
                                <Border Background="#FF6A11" 
                                        CornerRadius="8"
                                        Padding="6,3"
                                        Margin="10,0,0,0">
                                    <TextBlock x:Name="MyCardCountLabel"
                                               Text="0 шт."
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>
                            </StackPanel>

                            <ScrollViewer x:Name="PlayerHandScrollViewer"
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Disabled"
                                          Height="180">
                                <WrapPanel x:Name="PlayerHandPanel" 
                                           Orientation="Horizontal" 
                                           HorizontalAlignment="Center"/>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Правый игрок -->
                <Border x:Name="RightPlayerPanel"
                        Grid.Column="2"
                        Background="#FFFFFFE6"
                        CornerRadius="15"
                        Margin="10"
                        Padding="15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="220"
                        Visibility="Collapsed">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Border Width="40" Height="40" 
                                    CornerRadius="20"
                                    Background="#FF4500"
                                    Margin="0,0,10,0">
                                <TextBlock Text="😺" 
                                           FontSize="16"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="RightPlayerName"
                                           Text="Игрок4"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                                <TextBlock x:Name="RightPlayerCardCount"
                                           Text="0 карт"
                                           FontSize="11"
                                           Foreground="#666"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <WrapPanel x:Name="RightPlayerCardsPanel"
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Панель управления -->
            <Border Grid.Row="2"
                    Background="#FFFFFFE6"
                    CornerRadius="15"
                    Padding="15"
                    Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Взять карту -->
                    <Button x:Name="DrawCardButton"
                            Width="160" Height="45"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Margin="0,0,10,0"
                            Click="DrawCardButton_Click"
                            IsEnabled="False">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#06D6A0" Offset="0"/>
                                <GradientStop Color="#0ABF8F" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="🎴" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="ВЗЯТЬ КАРТУ"/>
                        </StackPanel>
                    </Button>

                    <!-- Сыграть карту -->
                    <Button x:Name="PlayCardButton"
                            Width="160" Height="45"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Margin="10,0,10,0"
                            Click="PlayCardButton_Click"
                            IsEnabled="False">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#4a148c" Offset="0"/>
                                <GradientStop Color="#6a24bc" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="▶️" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="СЫГРАТЬ КАРТУ"/>
                        </StackPanel>
                    </Button>

                    <!-- Завершить ход -->
                    <Button x:Name="EndTurnButton"
                            Width="160" Height="45"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Margin="10,0,10,0"
                            Click="EndTurnButton_Click"
                            IsEnabled="False">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FF6A11" Offset="0"/>
                                <GradientStop Color="#FF8A31" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="⏭️" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="ЗАВЕРШИТЬ ХОД"/>
                        </StackPanel>
                    </Button>

                    <!-- Комбо -->
                    <Button x:Name="UseComboButton"
                            Width="140" Height="45"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Margin="10,0,10,0"
                            Click="UseComboButton_Click"
                            IsEnabled="False">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#118AB2" Offset="0"/>
                                <GradientStop Color="#0A7BA2" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="🎭" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="КОМБО"/>
                        </StackPanel>
                    </Button>

                    <!-- Выйти -->
                    <Button x:Name="ExitButton"
                            Width="120" Height="45"
                            Background="#666666"
                            Foreground="White"
                            FontSize="13"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Margin="10,0,0,0"
                            Click="ExitButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="🚪" FontSize="16" Margin="0,0,6,0"/>
                            <TextBlock Text="В МЕНЮ"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Диалоговые окна поверх основного -->
        <Border x:Name="ModalOverlay"
                Background="#80000000"
                Visibility="Collapsed">
            <Grid>
                <!-- Здесь будут появляться диалоговые окна -->
            </Grid>
        </Border>
    </Grid>
</Window>